<% content_for :title, @dish.name %>

<section class='flex justify-between items-center mb-7 mt-3'>
  <%= link_to '&larr; Back to all dishes'.html_safe, restaurant_path(@restaurant), class: 'text-blue-600 dark:text-sky-500 hover:underline' %>
  <%= link_to 'Create dish', new_restaurant_dish_path, class: 'bg-slate-900 hover:bg-slate-700 dark:bg-sky-500 dark:hover:bg-sky-400 text-white px-4 py-2 rounded font-semibold' %>
</section>

<article class='flex flex-col md:flex-row md:h-[450px] bg-white dark:bg-slate-800 rounded-lg overflow-hidden border border-gray-300 dark:border-gray-700 mb-7'>
  <%= image_tag(url_for(@dish.photo), alt: @dish.name, class: 'w-full md:w-2/3 object-cover h-[350px] md:h-full') %>
  <div class='p-5 flex flex-col justify-between w-full md:w-1/3'>
    <section>
      <h2 class='text-2xl font-bold mb-5'><%= @dish.name %></h2>
      <p class='mb-4'><%= @dish.description %></p>

      <div class='flex justify-between items-center'>
        <p><b>Price: </b><%= number_to_currency(@dish.price) %></p>
        <span class='inline-block rounded-full dark:bg-gray-950 bg-gray-200 py-1 px-4 dark:text-gray-300 text-gray-950 font-medium'><%= @dish.dish_group %></span>
      </div>
    </section>

    <section class='flex justify-end gap-2 mt-4'>
      <%= link_to edit_restaurant_dish_path(@restaurant, @dish), class: 'bg-slate-900 dark:bg-sky-500 rounded-md p-2' do %>
        <svg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke-width='1.5' stroke='white' class='w-6 h-6'>
          <path stroke-linecap='round' stroke-linejoin='round' d='M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10' />
        </svg>
      <% end %>

      <%= button_to @restaurant, method: :delete, class: 'bg-slate-900 dark:bg-sky-500 rounded-md p-2', form: { data: { turbo_confirm: 'Are you sure you want to delete this dish?' } } do %>
        <svg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke-width='1.5' stroke='white' class='w-6 h-6'>
          <path stroke-linecap='round' stroke-linejoin='round' d='M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0' />
        </svg>
      <% end %>
    </section>
  </div>
</article>
