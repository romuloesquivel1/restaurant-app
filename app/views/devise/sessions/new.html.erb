<% content_for :title, 'Log in' %>

<h2 class="text-2xl font-bold mb-6">Log in</h2>

<% if resource.errors.any? || (request.post? && params.dig('user', 'password').present?) %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
    <strong class="font-bold"><%= I18n.t('devise.failure.invalid', authentication_keys: 'email') %></strong>
  </div>
<% end %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6 w-4/5 mx-auto" }) do |f| %>
  <div class="field">
    <%= f.label :email, class: "block text-sm font-medium text-gray-700", text: "Email address or Username" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
      <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
