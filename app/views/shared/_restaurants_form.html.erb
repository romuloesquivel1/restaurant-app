<article class='dark:bg-slate-800 bg-white rounded-md px-8 py-6 border border-gray-300 dark:border-gray-700 mb-7'>
  <%= form_with(model: @restaurant, local: true, data: { turbo: false }, html: { multipart: true }) do |f| %>
    <% if @restaurant.errors.any? %>
      <div class='bg-red-100 dark:bg-red-900 dark:text-red-100 border dark:border-red-600 border-red-400 text-red-700 px-4 py-3 rounded mb-2'>
        <h2 class='font-semibold'>The form contain <%= pluralize(@restaurant.errors.count, 'error') %></h2>
        <ul class='list-disc p-4'>
        <% @restaurant.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.label :name, class: 'font-medium dark:text-white text-gray-700' %>
    <%= f.text_field :name, class: 'block w-full rounded border-gray-200 dark:border-slate-700 w-full mb-4 mt-2 text-black dark:bg-slate-900 dark:text-white' %>

    <%= f.label :description, class: 'font-medium dark:text-white text-gray-700' %>
    <%= f.text_area :description, rows: 4, class: 'block w-full rounded border-gray-200 dark:border-slate-700 w-full mb-4 mt-2 text-black dark:bg-slate-900 dark:text-white' %>

    <%= f.label :address, class: 'font-medium dark:text-white text-gray-700' %>
    <%= f.text_field :address, class: 'block w-full rounded border-gray-200 dark:border-slate-700 w-full mb-4 mt-2 text-black dark:bg-slate-900 dark:text-white' %>

    <%= f.label :phone_number, class: 'font-medium dark:text-white text-gray-700' %>
    <%= f.telephone_field :phone_number, class: 'block w-full rounded border-gray-200 dark:border-slate-700 w-full mb-4 mt-2 text-black dark:bg-slate-900 dark:text-white' %>

    <%= f.label :logo, class: 'font-medium dark:text-white text-gray-700' %>
    <%= f.file_field :logo, class: 'rounded border border-gray-200 dark:border-slate-700 w-full mb-4 mt-2 file:mr-2 file:py-2 file:px-4 file:rounded file:border-0 dark:file:bg-slate-900 dark:file:text-white', accept: 'image/*' %>

    <div class='flex justify-between items-center'>
      <%= link_to '&larr; Back'.html_safe, restaurants_path, class: 'text-blue-600 dark:text-sky-500 hover:underline' %>
      <%= f.submit "#{action_name == 'new' ? 'Create' : 'Update'}", class: 'bg-slate-900 hover:bg-slate-700 dark:bg-sky-500 py-2 px-4 rounded-md dark:hover:bg-sky-400 cursor-pointer transition text-white font-semibold' %>
    </div>
  <% end %>
</article>
